<h1>Message App</h1>
<% @messages.each do |message| %>
    <h2> <%= message.title%> </h2>
    <%= link_to 'View', message_path(message), class: 'btn btn-secondary mb-1' %>
<% end %>
<div class="d-grid d-md-flex justify-content-md-start">
  <%= link_to 'New Message', new_message_path, class: 'btn btn-primary' %>
</div>
